---
const { title, themeColors } = Astro.props;

// Default colors
const defaultColors = {
  backgroundColor: '#fff',
  accentColor: '#000',
  textColor: '#333',
  linkColor: '#00f',
};

// Merge provided colors with defaults, using nullish coalescing to handle undefined themeColors
const finalColors = {
  backgroundColor: themeColors?.backgroundColor ?? defaultColors.backgroundColor,
  accentColor: themeColors?.accentColor ?? defaultColors.accentColor,
  textColor: themeColors?.textColor ?? defaultColors.textColor,
  linkColor: themeColors?.linkColor ?? defaultColors.linkColor,
};

// Get the current path
const currentPath = Astro.url.pathname;

// Navigation items
const navItems = [
  { href: 'about', text: 'About' },
  { href: 'projects', text: 'Projects' },
  { href: 'process', text: 'Process' },
  { href: 'faq', text: 'FAQ' },
  { href: 'contact', text: 'Contact' },
];

import Icon from '../storyblok/components/Icon.astro';
import logo from '../images/svgs/logo.svg';
import logoLarge from '../images/svgs/pointless-logo-large.svg';
import logoLargeWhite from '../images/svgs/pointless-logo-large--white.svg';
import iconX from '../images/svgs/x.svg';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/png" href="/favicon.png">

  <title>{title}</title>

  <style define:vars={finalColors}>
    :root {
      --backgroundColor: {finalColors.backgroundColor};
      --accentColor: {finalColors.accentColor};
      --textColor: {finalColors.textColor};
      --linkColor: {finalColors.linkColor};
    }

    body,
    footer {
      background-color: var(--backgroundColor);
      color: var(--textColor);
    }

    body a {
      color: var(--linkColor);
    }
  </style>
</head>
<body class="antialiased font-base">
  <header class="absolute top-9 left-0 z-20 w-full px-3">
    <div class="mx-auto flex max-w-7xl items-center justify-center sm:justify-between">
      <h1>
        {currentPath === "/" ? (
          <img src={logo.src} class="h-auto w-[160px]" alt="Pointless Corp." />
        ) : (
          <a href="/">
            <img src={logo.src} class="h-auto w-[160px]" alt="Pointless Corp." />
          </a>
        )}
      </h1>

      <nav class="hidden sm:block">
        <ul class="flex gap-4 font-functionpro">
          {navItems.map(item => (
            <li><a class="!text-white text-lg hover:underline focus:underline uppercase" href={`/#${item.href}`}>{item.text}</a></li>
          ))}
        </ul>
      </nav>
    </div>
  </header>
  <main id="content">
    <slot />
  </main>
  <footer class="flex flex-col items-center px-5 uppercase py-[50px] font-functionpro">
    {currentPath === "/" ? (
      <img src={logoLarge.src} class="h-auto w-[212px] sm:w-[282px]" alt="Pointless Corp." />
    ) : (
      <img src={logoLargeWhite.src} class="h-auto w-[212px] sm:w-[282px]" alt="Pointless Corp." />
    )}

    <p class="mt-8 text-xs text-brick-dark">The innovation lab at <a class="underline text-brick-dark" href="http://viget.com">Viget</a></p>

    <p class="mt-6">
      <a class="inline-block rounded-full border transition duration-300 border-gray-light p-[13px] hover:border-gray-dark focus:border-gray-dark" href="http://x.com/pointlesscorp">
        <img src={iconX.src} alt="X" class="h-8 w-8" alt="X" />
      </a>
    </p>

    <p class="mt-5 text-xs text-gray-light">&copy; {new Date().getFullYear()} Pointless Corp.</p>
  </footer>
</body>
</html>
